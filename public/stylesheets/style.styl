@import "bootstrap.min.css"
@import "bootstrap-theme.min.css"
@import url(http://fonts.googleapis.com/css?family=Ubuntu)
@import url(http://fonts.googleapis.com/css?family=Ubuntu+Mono)

@import '_header'

body, html {
  height: 100%
}

body {
  &, h1, h2, h3, h4, h5 {
    font-family: 'Ubuntu', sans-serif;
  }

  .headline-spacer { height: 90px }
  .full-height { height: 100%; max-height: 768px }
  .beige { background-color: #f7f6f1 }
  .light-blue { background-color: #4BAFEA }
  .mid-blue { background-color: #3B7CB9 }
  .dark-blue { background-color: #314267 }

  .light-blue, .mid-blue, .dark-blue {
    color: white

    h2.centered {
      text-transform: uppercase
      text-align: center
      margin-bottom: 30px

      &:not(:first-of-type) {
        margin-top: 80px
      }
    }

  }

  pre {
    border: 0;
    line-height: 30px
    padding: 0;

    code {
      margin: 40px
      background:transparent;
      font-family: 'Ubuntu Mono', sans-serif;
      font-size: 18px;
    }
  }

  section {
    .jumbotron {
      background: transparent;
    }

    &.users {
      .row > * {
        line-height: 100px
      }

      img {
        width: 100%
      }
    }
  }

  .navigation {
    a { color: white }

    > ul {
      list-style-type: none
      padding: 0
      margin: 0

      &:first-of-type {
        margin-top: 92px
      }

      > li {
        &:first-of-type {
          border-top: 1px solid rgba(255,255,255,0.2)
        }

        list-style-type: none
        border-bottom: 1px solid rgba(255,255,255,0.2)
        font-size: 20px
        line-height: 60px

        &.active {
          > a:first-of-type {
            color: rgba(255,255,255,0.6)
          }
        }

        ul {
          list-style-type: none
          margin: 0 0 10px 30px
          padding: 0

          li {
            list-style-type: none
            font-size: 16px
            line-height: 40px
          }
        }
      }
    }
  }

  .documentation-content {
    h2, h3 {
      padding-top: 90px
    }
  }
}
